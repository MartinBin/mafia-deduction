<Window x:Class="Mafia_client.JoinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Join Game" Height="200" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Enter Server IP:" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="ServerIpTextBox" Grid.Row="1" Margin="0,0,0,10"/>
        <TextBlock Text="Enter Your Name:" Grid.Row="2" Margin="0,0,0,5"/>
        <TextBox x:Name="PlayerNameTextBox" Grid.Row="3" Margin="0,0,0,10"/>
        <Button Content="Join" Grid.Row="4" Click="JoinButton_Click" Width="100" HorizontalAlignment="Right"/>
    </Grid>
</Window>
